<?xml version="1.0" encoding="UTF-8"?>
<Module>
  <ModulePrefs title="Bikini-Bottom" author_email="christopher.blum@xing.com, ali.jelveh@xing.com" description="awesome">
    <Require feature="opensocial-0.8" />
    <Require feature="dynamic-height" />
    <Require feature="flash" />
    <Require feature="settitle" />
    <Require feature="tabs" />
  </ModulePrefs>
  <Content type="html" view="home"><![CDATA[
    <!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
      "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
    <html xmlns="http://www.w3.org/1999/xhtml">
      <head>
        <link rel="stylesheet" href="http://localhost:8080/bikinibottom_os/common.css" type="text/css" charset="utf-8" />
        <link rel="stylesheet" href="http://localhost:8080/bikinibottom_os/home.css" type="text/css" charset="utf-8" />
        <script src="http://localhost:8080/bikinibottom_os/common.js" type="text/javascript" charset="utf-8"></script>
        <script src="http://localhost:8080/bikinibottom_os/home.js" type="text/javascript" charset="utf-8"></script>
      </head>
      <body id="home">
        <script type="text/javascript" charset="utf-8">
          // Unfortunately new gadgets.TabsSet uses document.write
          _tabs = new gadgets.TabSet(__MODULE_ID__);
        </script>
        
        <div id="new" style="display: none;">New</div>
        <div id="inbox" style="display: none;">Inbox</div>
        <div id="outbox" style="display: none;">Outbox</div>
        
        <script type="text/javascript" charset="utf-8">
          gadgets.util.registerOnLoadHandler(function() {
            xing.bikinibottom.Home.initialize({
              tabs: _tabs
            });
          });      
        </script>
        
        
        <div id="flash-viewer">
            here comes the flash movie
        </div>
        
        <script type="text/javascript">
          gadgets.flash.embedFlash("http://localhost:8080/bikinibottom_os/liverecord.swf", "flash-viewer", 10, {width: 300, height: 250});
          gadgets.window.adjustHeight();
        </script>
        
      </body>
    </html>
  ]]></Content>
</Module>